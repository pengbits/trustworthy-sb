{
  "name": "@trustworthy/design-system",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/trustworthy-ds.cjs.js",
  "module": "./dist/trustworthy-ds.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/trustworthy-ds.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/trustworthy-ds.cjs.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc -p tsconfig.lib.json && vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "ui",
    "storybook"
  ],
  "author": "",
  "license": "ISC",
  "description": "Trustworthy Design System - React components and design tokens",
  "repository": {
    "type": "git",
    "url": ""
  },
  "publishConfig": {
    "registry": ""
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-onboarding": "^10.0.2",
    "@storybook/addon-vitest": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "storybook": "^10.0.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "playwright": "^1.56.1",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/coverage-v8": "^4.0.6"
  }
}
